%h1 Listing tournaments

%table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @tournaments.each do |tournament|
      %tr
        %td= link_to tournament.name, admin_tournament_path(tournament), {class: "btn btn-link"}
        %td= link_to 'Edit', edit_admin_tournament_path(tournament), {class: "btn btn-link"}
        %td= link_to 'Destroy', admin_tournament_path(tournament), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"

%br

= link_to 'New tournament', new_admin_tournament_path, {class: "btn btn-default"}
