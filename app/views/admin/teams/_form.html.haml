- if @team.errors.any?
  .row
    .col-md-12
      #error_explanation
        %h2
          = "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
        %ul
          - @team.errors.full_messages.each do |message|
            %li= message

.row
  .col-md-6
    = simple_form_for [:admin, @team] do |f|
      = f.input :name, label: 'Name', error: 'Name is mandatory, please specify one.'
      = f.association :tournament
      = f.association :club
      = f.association :users, as: :check_boxes
      = f.button :submit
