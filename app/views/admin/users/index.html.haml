%h1 Listing users

%table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.name, admin_user_path(user), {class: "btn btn-link"}
        %td= link_to 'Edit', edit_admin_user_path(user), {class: "btn btn-link"}
        %td= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"

%br

= link_to 'New user', new_admin_user_path, {class: "btn btn-default"}
