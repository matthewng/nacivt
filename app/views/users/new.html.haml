.container
  = form_tag users_path, :method => :post, class: "form-signin" do
    %h3.form-signin-heading Register for an account
    %label.sr-only{:for => "inputEmail"} Email address
    %input#inputEmail.form-control.top-control{:autofocus => "", :name => "email", :placeholder => "Email address", :required => "", :type => "email"}/
    %label.sr-only{:for => "inputPassword"} Password
    %input#inputPassword.form-control.mid-control{:name => "password", :placeholder => "Password", :required => "", :type => "password"}/
    %label.sr-only{:for => "inputPassword"} Confirm Password
    %input#inputConfirmPassword.form-control.bottom-control{:name => "password_confirmation", :placeholder => "Confirm Password", :required => "", :type => "password"}/
    %label.sr-only{:for => "inputFirstName"} First Name
    %input#inputFirstName.form-control.top-control{:name => "first_name", :placeholder => "First Name", :required => "", :type => "text"}/
    %label.sr-only{:for => "inputLastName"} Last Name
    %input#inputLastName.form-control.bottom-control{:name => "last_name", :placeholder => "Last Name", :required => "", :type => "text"}/
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign up

    .login
      = link_to "I already have an account.", login_path