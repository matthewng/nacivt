.container
  = form_tag login_path, :method => :post, class: "form-signin" do
    %h3.form-signin-heading Please sign in
    %label.sr-only{:for => "inputEmail"} Email address
    %input#inputEmail.form-control.top-control{:autofocus => "", :name => "email", :placeholder => "Email address", :required => "", :type => "email"}/
    %label.sr-only{:for => "inputPassword"} Password
    %input#inputPassword.form-control.bottom-control{:name => "password", :placeholder => "Password", :required => "", :type => "password"}/
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign in
    
    .signup
      = link_to "Or sign up for a new account.", signup_path