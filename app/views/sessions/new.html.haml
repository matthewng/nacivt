.container
  = form_tag login_path, :method => :post, class: "form-signin" do
    :erb
      <h3 class="form-signin-heading">Please sign in</h3>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" class="form-control top-control" placeholder="Email address" required autofocus name="email" />
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" class="form-control bottom-control" placeholder="Password" required name="password">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    
    .signup
      = link_to "Or sign up for a new account.", signup_path